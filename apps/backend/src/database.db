CREATE TABLE users (
    id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
    "user" TEXT,
    created_at TIMESTAMPTZ,
    updated_at TIMESTAMPTZ
);

create table user_configuration (
	user_id uuid,
	font_size integer,
	theme text
);

create table followers (
	user_id uuid,
	user_refer uuid
);

create table posts (
	id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
	user_id uuid,
	post_refer uuid,
	created_at TIMESTAMPTZ,
	updated_at TIMESTAMPTZ,
	likes integer
);

create table comments (
	post_id uuid,
	comment text,
	likes integer
);

